<table>
  <thead>
    <tr>
      <th/>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody data-controller="drag" data-drag-url="/mocks/:id/move">
    <% mocks.each do |mock| %>
      <tr data-id="<%= mock.id %>" class="card card-body mb-4">
        <td><i class="fa fa-sort"></i></td>
        <td><%= mock.name %></td>
        <td><%= link_to 'Show', mock %></td>
        <td><%= link_to 'Edit', edit_mock_path(mock) %></td>
        <td><%= link_to 'Destroy', mock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
