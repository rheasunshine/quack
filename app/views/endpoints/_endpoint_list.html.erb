<table>
  <thead>
    <tr>
      <th>API</th>
      <th>Name</th>
      <th>Description</th>
      <th>Endpoint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% endpoints.each do |endpoint| %>
      <tr>
        <td><%= "#{endpoint.external_api.partner.name}: #{endpoint.external_api.name}" %></td>
        <td><%= endpoint.name %></td>
        <td><%= endpoint.description %></td>
        <td><%= endpoint.endpoint %></td>
        <td><%= link_to 'Show', endpoint %></td>
        <td><%= link_to 'Edit', edit_endpoint_path(endpoint) %></td>
        <td><%= link_to 'Destroy', endpoint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
